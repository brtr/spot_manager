<div class="m-3">
  <div class="m-3">
    <h3 class="text-center"> 现货合并交易历史数据快照 </h3>
  </div>
  <div id="snapshot-container" class="mt-2">
    <div class="container">
      <% @results.each do |r| %>
        <div class="row">
          <h2 class="text-center p-3 base_line"><%= r[:year] %></h2>
          <% r[:monthes].each do |m| %>
            <div class="mb-3 col-4">
              <h4 class="text-center p-2"><%= m[:month] %>月</h4>
              <div class="row">
                <% m[:dates].each do |d| %>
                  <div class="text-center col-2 p-3">
                    <%= link_to d[:day], combine_tx_snapshot_info_path(d[:id]) %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>